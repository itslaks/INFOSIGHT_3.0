[flake8]
max-line-length = 120
exclude = 
    .venv,
    venv,
    __pycache__,
    *.pyc,
    migrations,
    .git,
    build,
    dist,
    *.egg-info
ignore = 
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by IDE)
    F403   # unable to detect undefined names (dynamic imports)
per-file-ignores =
    __init__.py:F401
max-complexity = 15
